<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_weight="0.34">
    <RadioButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="network on"
      android:id="@+id/radioButton" android:layout_gravity="center" android:checked="true"/>
  </FrameLayout>
  <ImageView
    android:layout_width="57dp"
    android:layout_height="wrap_content"
    android:id="@+id/imageView" android:layout_gravity="center_horizontal" android:layout_weight="2.79"/>
</LinearLayout>

